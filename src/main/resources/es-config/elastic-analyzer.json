{
  "analysis": {
    "tokenizer": {
      "stringTokenizer": {
        "type": "char_group",
        "tokenize_on_chars": [
          "whitespace",
          "punctuation",
          "symbol"
        ]
      }
    },
    "filter": {
      "autocompleteFilter": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 20
      },
      "asciiFoldingFilter": {
        "type": "asciifolding",
        "preserve_original": true
      }
    },
    "char_filter": {
      "houseIdentificationNumberCharFilter": {
        "type": "pattern_replace",
        "pattern": "(\\d*)/*(\\d*)(\\w*)",
        "replacement": "$1 $2 $3"
      },
      "houseNumberOrReferenceNumberCharFilter": {
        "type": "pattern_replace",
        "pattern": "(\\d*)/*(\\d*)(\\w*)",
        "replacement": "$1 $2"
      },
      "houseReferenceSignCharFilter": {
        "type": "pattern_replace",
        "pattern": "(\\d*)/*(\\d*)(\\w*)",
        "replacement": "$3"
      }
    },
    "analyzer": {
      "autocompleteAnalyzer": {
        "type": "custom",
        "tokenizer": "stringTokenizer",
        "filter": [
          "lowercase",
          "asciiFoldingFilter",
          "shingle"
        ]
      },
      "houseNumberOrReferenceNumberAnalyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "char_filter": [
          "houseNumberOrReferenceNumberCharFilter"
        ]
      },
      "houseReferenceSignAnalyzer": {
        "type": "custom",
        "tokenizer": "standard",
        "char_filter": [
          "houseReferenceSignCharFilter"
        ]
      }
    }
  }
}


